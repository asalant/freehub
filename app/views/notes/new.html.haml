%h1 #{link_to @person.full_name, person_path(:id => @person)} : #{link_to 'Notes', notes_path(:person_id => @person)} : New

=error_messages_for :note
-form_for @note do |f|
  %ul
    =labeled_input 'Text', :for => :text do
      -capture do
        =f.text_area :text, :rows => 6
    %li 
      =f.submit "Create"